<h1>Cars</h1>

<%= render 'shared/flash_messages' %>

<table>
  <thead>
    <tr>
      <th>Registration number</th>
      <th>Model</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
    <tr>
      <td><%= car.registration_number %></td>
      <td><%= car.model %></td>
      <td><%= link_to "Show", car %></td>
      <td><%= link_to "Edit", edit_car_path(car) %></td>
      <td><%= link_to "Remove", car, method: :delete, data: { confirm: "Are you sure?" } %></td>
    </tr>
    <% end %>
  </tbody>
</table><br />

<%= link_to "Add new car", new_car_path %>
