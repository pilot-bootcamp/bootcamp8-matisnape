= render 'shared/error_messages', object: @account
= form_for @account do |f|
  = f.label :email, t('user.form.email')
  = f.text_field :email
  %br/
  = f.label :password, t('user.form.password')
  = f.password_field :password
  %br/
  = f.label :password_confirmation, t('user.form.password_confirmation')
  = f.password_field :password_confirmation
  %br/
  = f.fields_for :person_attributes do |person_fields|
    = person_fields.label :first_name, t('user.form.first_name')
    = person_fields.text_field :first_name
    %br/
    = person_fields.label :last_name, t('user.form.last_name')
    = person_fields.text_field :last_name
    %br/
  = f.submit t('user.form.register_btn'), class: "btn btn-primary"
  %br/
%br/
