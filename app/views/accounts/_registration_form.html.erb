<%= render 'shared/error_messages', object: @account %>

<%= form_for @account do |f| %>
  <%= f.label :email, "Enter email:" %>
  <%= f.text_field :email %><br />
  <%= f.label :password, "Enter password:" %>
  <%= f.password_field :password %><br />
  <%= f.label :password_confirmation, "Enter password confirmation:" %>
  <%= f.password_field :password_confirmation %><br />
  <%= f.fields_for :person_attributes do |person_fields| %>
    <%= person_fields.label :first_name, "Enter first name:" %>
    <%= person_fields.text_field :first_name %><br />
    <%= person_fields.label :last_name, "Enter last name:" %>
    <%= person_fields.text_field :last_name %><br />
  <% end %>
  <%= f.submit "Submit", class: "btn btn-primary" %><br />
<% end %><br />
