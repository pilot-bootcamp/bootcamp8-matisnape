%h3 Search
= form_tag(parkings_path, method: "get") do
  = check_box_tag "query[kind_private]", "1", query_params[:kind_private]
  = label_tag "query[kind_private]", t('search.private')
  = check_box_tag "query[kind_public]", true, query_params[:kind_public]
  = label_tag "query[kind_public]", t('search.public')
  %br/
  = label_tag "query[min_day_price]", t('search.min_price_day')
  = text_field_tag "query[min_day_price]", query_params[:min_day_price]
  = label_tag "query[max_day_price]", t('search.max_price_day')
  = text_field_tag "query[max_day_price]", query_params[:max_day_price]
  %br/
  = label_tag "query[min_hour_price]", t('search.min_price_hour')
  = text_field_tag "query[min_hour_price]", query_params[:min_hour_price]
  = label_tag "query[max_hour_price]", t('search.max_price_hour')
  = text_field_tag "query[max_hour_price]", query_params[:max_hour_price]
  %br/
  = label_tag "query[city]", t('search.city')
  = text_field_tag "query[city]", query_params[:city]
  %br/
  = submit_tag t('search.btn')
  %br/
%br/
