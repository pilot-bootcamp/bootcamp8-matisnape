<%= form_for @parking do |f| %>
  <%= render 'shared/error_messages' %>

  <%= f.fields_for :address_attributes, @parking.address do |address_fields| %>
    Enter city: <%= address_fields.text_field :city %><br />
    Enter street: <%= address_fields.text_field :street %><br />
    Enter zipcode: <%= address_fields.text_field :zip_code %><br />
  <% end %>
  <%= f.fields_for(:owner) do |owner_fields| %>
    Enter owner first name: <%= owner_fields.text_field :first_name %><br />
    Enter owner last name: <%= owner_fields.text_field :last_name %><br />
  <% end %>

  <%= f.label :places, "Enter number of places available:" %>
  <%= f.text_field :places %><br />
  <%= f.label :hour_price, "Enter price per hour:" %>
  <%= f.text_field :hour_price %><br />
  <%= f.label :day_price, "Enter price per day:" %>
  <%= f.text_field :day_price %><br />
  <%= f.label :kind, "Enter kind:" %>
  <%= f.select :kind do %>
    <%= options_for_select %w(outdoor indoor private street), @parking.kind %>
  <% end %><br />
  <%= f.submit "Submit" %><br />
<% end %><br />
