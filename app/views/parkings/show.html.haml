%h1
  Parking: #{"#{@parking.address.city}, #{@parking.address.street} "}
%table.table.table-striped
  %thead
    %tr
      %th= t('parkings.city')
      %th= t('parkings.places')
      %th= t('parkings.hour_price')
      %th= t('parkings.day_price')
      %th
  %tbody
    %tr
      %td= @parking.address.city
      %td= @parking.places
      %td= @parking.hour_price
      %td= @parking.day_price
      %td
        .btn-group.pull-right
          = link_to t('parkings.rent_place'), new_parking_place_rent_path(@parking), class: "btn btn-primary"
          = link_to t('crud.show'), @parking, class: "btn btn-info"
          = link_to t('crud.edit'), edit_parking_path(@parking), class: "btn btn-default"
          = link_to t('crud.delete'), @parking, class: "btn btn-danger", method: :delete, data: { confirm: t('crud.confirmation') }
%br/
